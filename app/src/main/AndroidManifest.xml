<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.STAGII"
        tools:targetApi="31">
        <activity
            android:name=".AppHomeActivity"
            android:exported="false" />
        <activity
            android:name=".globalActivity.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.STAGII.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".globalActivity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.STAGII.NoActionBar" />
        <activity
            android:name=".globalActivity.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.STAGII.NoActionBar" />
        <activity
            android:name=".job.Postulate"
            android:exported="true"
            android:theme="@style/Theme.STAGII.NoActionBar" />


        <activity
            android:name=".user.UserProfile"
            android:exported="true"
            android:theme="@style/Theme.STAGII.NoActionBar" />


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.STAGII.NoActionBar" />

    </application>

</manifest>